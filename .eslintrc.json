{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@next/next/recommended",
		"prettier",
		"next/core-web-vitals",
		"next/typescript"
	],
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": ["error", { "useTabs": true }],
		"react/react-in-jsx-scope": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
